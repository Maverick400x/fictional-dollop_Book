<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Login - BookNest</title>

  <!-- Bootstrap CSS & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="icon" href="https://book-nest-wgrp.onrender.com/src/logo.ico" type="image/x-icon">

  <style>
    body {
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
      background-color: #f8f9fa;
    }

    .left-panel {
      background: url("https://thumbs.dreamstime.com/b/fantasy-library-anime-illustration-beautiful-view-style-generated-ai-image-286916330.jpg") no-repeat center center;
      background-size: cover;
      position: relative;
    }

    .left-panel::before {
      content: "";
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 0;
    }

    .left-panel > div {
      position: relative;
      z-index: 1;
    }

    .form-container {
      max-width: 400px;
      width: 100%;
    }

    .btn-primary:active {
      transform: scale(0.98);
      transition: transform 0.1s ease;
    }

    .toast-container {
      position: fixed;
      top: 1rem;
      right: 1rem;
      z-index: 1055;
    }

    .btn-google {
      background: #fff;
      color: #444;
      border: 1px solid #ddd;
      display: flex;
      align-items: center;
      justify-content: center;
      font-weight: 500;
      padding: 0.5rem;
      gap: 8px;
    }

    .btn-google:hover {
      background: #f7f7f7;
      color: #000;
      text-decoration: none;
    }

    .btn-google svg {
      width: 20px;
      height: 20px;
    }
  </style>
</head>
<body>

  <!-- Toast Container -->
  <div class="toast-container">
    <div id="toast-message" class="toast align-items-center text-white bg-success border-0" role="alert">
      <div class="d-flex">
        <div class="toast-body">Login Successful</div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
      </div>
    </div>
  </div>

  <div class="d-flex min-vh-100">
    <!-- Left Info Panel -->
    <div class="left-panel d-none d-md-flex flex-column justify-content-center text-white p-5">
      <div>
        <h1 class="fw-bold">Welcome Back ðŸ‘‹</h1>
        <p class="lead mt-3">Log in to BookNest and dive back into your reading journey.</p>
        <p class="mt-4">Access your personal library, saved wishlists, and continue where you left off.</p>
      </div>
    </div>

    <!-- Right Login Form -->
    <div class="right-panel d-flex align-items-center justify-content-center flex-fill bg-light">
      <div class="form-container p-4 shadow-lg rounded bg-white">
        <h2 class="text-center mb-4">Login to BookNest</h2>

        <!-- Google Login -->
        <div class="d-grid mb-3">
          <a href="/auth/google" class="btn btn-google shadow-sm">
            <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 488 512">
              <path fill="#EA4335" d="M488 261.8c0-17.4-1.6-34.1-4.7-50.3H249.3v95.2h135.4c-5.8 30-23.2 55.5-49.4 72.7v60.3h79.8c46.6-42.9 73.9-106 73.9-177.9z"/>
              <path fill="#34A853" d="M249.3 512c67.1 0 123.5-22.2 164.6-60.1l-79.8-60.3c-22.1 14.9-50.5 23.7-84.8 23.7-65.2 0-120.5-44-140.4-103.2H27.7v64.8C68.8 463.1 152.6 512 249.3 512z"/>
              <path fill="#4A90E2" d="M108.9 308.1c-4.8-14.4-7.5-29.7-7.5-45.3s2.7-30.9 7.5-45.3V152H27.7c-14 28-22 59.5-22 92s8 64 22 92l81.2-27.9z"/>
              <path fill="#FBBC05" d="M249.3 97.3c35.7 0 67.3 12.3 92.3 36.5l69-69C372.8 26.5 315.4 0 249.3 0 152.6 0 68.8 48.9 27.7 121.2l81.2 64.8c19.9-59.2 75.2-103.2 140.4-103.2z"/>
            </svg>
            Login with Google
          </a>
        </div>

        <div class="text-center text-muted my-3">â€” or login manually â€”</div>

        <form id="loginForm" action="/users/login" method="POST" novalidate>
          <div class="mb-3 input-group">
            <span class="input-group-text"><i class="bi bi-envelope-fill"></i></span>
            <input type="email" name="email" id="email" class="form-control" placeholder="Email Address" required>
          </div>

          <div class="mb-3 input-group">
            <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
            <input type="password" name="password" id="password" class="form-control" placeholder="Password" required>
            <span class="input-group-text" style="cursor:pointer;" id="togglePassword">
              <i class="bi bi-eye-fill" id="toggleIcon"></i>
            </span>
          </div>

          <div class="d-flex justify-content-between align-items-center mb-3">
            <a href="/users/forgot-password" class="text-decoration-none text-primary small">
              Forgot Password?
            </a>
          </div>

          <button type="submit" class="btn btn-primary w-100">Login</button>
        </form>

        <p class="mt-3 text-center">
          Donâ€™t have an account? 
          <a href="/users/register" class="text-decoration-none fw-semibold">Register here</a>
        </p>

        <div class="text-center mt-3">
          <a href="/" class="btn btn-outline-secondary btn-sm">
            <i class="bi bi-arrow-left"></i> Back to Home
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <script>
    const togglePassword = document.getElementById("togglePassword");
    const passwordInput = document.getElementById("password");
    const toggleIcon = document.getElementById("toggleIcon");
    const toastEl = document.getElementById("toast-message");
    const toast = new bootstrap.Toast(toastEl);

    togglePassword.addEventListener("click", () => {
      const type = passwordInput.type === "password" ? "text" : "password";
      passwordInput.type = type;
      toggleIcon.classList.toggle("bi-eye");
      toggleIcon.classList.toggle("bi-eye-slash-fill");
    });

    // Client-side validation and redirect
    const form = document.getElementById("loginForm");
    form.addEventListener("submit", (e) => {
      const email = document.getElementById("email").value.trim();
      const password = passwordInput.value.trim();

      if (!email || !password) {
        e.preventDefault();
        toastEl.classList.remove("bg-success");
        toastEl.classList.add("bg-danger");
        toastEl.querySelector(".toast-body").textContent = "Please fill in all fields.";
        toast.show();
      } else {
        toastEl.classList.remove("bg-danger");
        toastEl.classList.add("bg-success");
        toastEl.querySelector(".toast-body").textContent = "Logging in...";
        toast.show();
      }
    });
  </script>
</body>
</html>