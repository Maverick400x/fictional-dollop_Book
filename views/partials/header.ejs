<!DOCTYPE html>
<html lang="en">
<head>
  <title>BookNest</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" href="https://book-nest-wgrp.onrender.com/src/logo.ico" type="image/svg+xml">

  <style>
    :root {
      --booknest-primary: #1e81b0;
      --booknest-secondary: rgba(0,77,115,0.7);
      --booknest-accent: #ffc107;
      --glass-blur: 12px;
      --glass-bg: rgba(255, 255, 255, 0.1);
      --glass-border: rgba(255, 255, 255, 0.25);
    }

    body {
      font-family: 'Inter', sans-serif;
      text-transform: capitalize;
      min-height: 100vh;
      margin: 0;
    }

    /* --- Glass Navbar Styling --- */
    .navbar {
      background: var(--glass-bg);
      backdrop-filter: blur(var(--glass-blur));
      border: 1px solid var(--glass-border);
      box-shadow: 0 8px 32px rgba(0,0,0,0.15);
      padding-top: 0.6rem;
      padding-bottom: 0.6rem;
      border-radius: 15px;
      margin: 0.5rem 1rem;
      transition: all 0.3s ease-in-out;
    }

    .navbar:hover {
      transform: translateY(-2px);
      box-shadow: 0 12px 40px rgba(0,0,0,0.25);
    }

    .navbar-brand {
      font-weight: 800;
      font-size: 1.6rem;
      color: #fff !important;
    }

    .navbar-brand span {
      font-weight: 300;
      color: var(--booknest-accent);
    }

    .navbar-toggler {
      border-color: rgba(255, 255, 255, 0.3);
    }

    .navbar-toggler-icon {
      filter: invert(1);
    }

    .nav-link {
      color: rgba(255, 255, 255, 0.85) !important;
      font-weight: 400;
      margin: 0 5px;
      border-radius: 8px;
      position: relative;
      transition: all 0.3s ease;
    }

    .nav-link:hover {
      color: #fff !important;
      background-color: rgba(255, 255, 255, 0.15);
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(0,0,0,0.2);
    }

    /* Cart Badge */
    .cart-badge {
      position: absolute;
      top: -6px;
      right: -10px;
      background-color: #dc3545;
      color: #fff;
      border-radius: 50%;
      padding: 2px 6px;
      font-size: 0.7rem;
      font-weight: 600;
      line-height: 1;
    }

    .nav-link-user {
      background-color: var(--booknest-primary);
      color: #fff !important;
      font-weight: 600 !important;
      padding: 0.5rem 1rem !important;
      border-radius: 25px;
      transition: all 0.3s ease;
    }

    .nav-link-user:hover {
      background-color: #1a6f99;
      transform: translateY(-2px);
    }

    .btn-login {
      background-color: var(--booknest-accent);
      color: #212529;
      font-weight: 700;
      border: none;
      border-radius: 25px;
      transition: all 0.3s ease;
    }

    .btn-login:hover {
      background-color: #e0a800;
      transform: translateY(-2px) scale(1.05);
      box-shadow: 0 6px 20px rgba(0,0,0,0.2);
    }

    /* Toast Styling */
    .toast {
      border-radius: 12px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.25);
      backdrop-filter: blur(10px);
    }
  </style>
</head>
<body>

  <!-- Navbar -->
  <nav class="navbar navbar-expand-lg fixed-top shadow-sm">
    <div class="container">
      <a class="navbar-brand d-flex align-items-center" href="/">
        <img src="https://book-nest-wgrp.onrender.com/src/logo.ico" alt="BookNest Logo" height="30" class="me-2">
        Book<span>Nest</span>
      </a>

      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarOverlay" aria-controls="navbarOverlay" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarOverlay">
        <ul class="navbar-nav ms-auto align-items-lg-center text-center text-lg-start">
          <% if (user) { %>
            <li class="nav-item me-lg-2 mb-2 mb-lg-0">
              <a class="nav-link nav-link-user" href="/users/account">
                <i class="bi bi-person-circle me-1"></i> Hello, <%= user.username %>
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/products">
                <i class="bi bi-book me-1"></i>Products
              </a>
            </li>

            <li class="nav-item position-relative">
              <a class="nav-link" href="/cart">
                <i class="bi bi-cart4 me-1"></i>Cart
                <% if (typeof cartCount !== 'undefined' && cartCount > 0) { %>
                  <span class="cart-badge"><%= cartCount %></span>
                <% } %>
              </a>
            </li>

            <li class="nav-item">
              <a class="nav-link" href="/orders">
                <i class="bi bi-truck me-1"></i>Orders
              </a>
            </li>

            <li class="nav-item ms-lg-2">
              <a class="nav-link text-danger fw-bold" href="/users/logout">
                <i class="bi bi-box-arrow-right me-1"></i> Logout
              </a>
            </li>
          <% } else { %>
            <li class="nav-item">
              <a href="/users/login" class="btn btn-login-glass">
                <i class="bi bi-box-arrow-in-right me-1"></i> Log In
              </a>
            </li>
          <% } %>
        </ul>
      </div>
    </div>
  </nav>

  <!-- Network Status Toast -->
  <div class="position-fixed top-0 end-0 p-3" style="z-index: 1100;">
    <div id="networkToast" class="toast align-items-center text-bg-danger border-0" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <i class="bi bi-wifi-off me-2"></i> You are offline. Check your internet connection.
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast" aria-label="Close"></button>
      </div>
    </div>
  </div>

  <!-- Bootstrap JS -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

  <!-- Network Detection Script -->
  <script>
    const toastEl = document.getElementById('networkToast');
    const toast = new bootstrap.Toast(toastEl, { delay: 4000 });

    function showOfflineToast() {
      toastEl.querySelector('.toast-body').innerHTML =
        '<i class="bi bi-wifi-off me-2"></i> You are offline. Check your internet connection.';
      toastEl.classList.remove('text-bg-success');
      toastEl.classList.add('text-bg-danger');
      toast.show();
    }

    function showOnlineToast() {
      toastEl.querySelector('.toast-body').innerHTML =
        '<i class="bi bi-wifi me-2"></i> You are back online!';
      toastEl.classList.remove('text-bg-danger');
      toastEl.classList.add('text-bg-success');
      toast.show();
    }

    // Detect network status changes
    window.addEventListener('offline', showOfflineToast);
    window.addEventListener('online', showOnlineToast);

    // On page load, check connection immediately
    if (!navigator.onLine) {
      showOfflineToast();
    }
  </script>

</body>
</html>