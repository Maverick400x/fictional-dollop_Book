<!-- Loading Screen -->
<div id="loader-wrapper">
  <div id="loader">
    <img
      src="https://book-nest-wgrp.onrender.com/src/logo.svg"
      alt="BookNest Logo"
      id="loader-logo"
      width="80"
      height="80"
    />
    <div class="progress-bar-wrapper">
      <div id="progress-bar"></div>
    </div>
    <p id="loading-text">Loading BookNest... 0%</p>
  </div>
</div>

<style>
  /* ===================== */
  /* ⚡ Optimized BookNest Loader with Logo */
  /* ===================== */

  #loader-wrapper {
    position: fixed;
    inset: 0;
    width: 100%;
    height: 100%;
    background: #ffffff;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    z-index: 2000;
    transition: opacity 0.4s ease, visibility 0.4s ease;
    will-change: opacity, visibility;
  }

  #loader-wrapper.fade-out {
    opacity: 0;
    visibility: hidden;
  }

  #loader {
    text-align: center;
    animation: fadeIn 0.4s ease-in-out;
  }

  /* ✅ Logo Styling */
  #loader-logo {
    width: 80px;
    height: 80px;
    margin-bottom: 18px;
    animation: logoPop 0.8s ease-in-out;
    user-select: none;
  }

  .progress-bar-wrapper {
    width: 260px;
    height: 6px;
    background-color: #eee;
    border-radius: 3px;
    overflow: hidden;
    margin-top: 10px;
  }

  #progress-bar {
    width: 0%;
    height: 100%;
    background: linear-gradient(90deg, #007bff, #28a745);
    transition: width 0.2s ease;
    will-change: width;
  }

  #loading-text {
    font-size: 1rem;
    font-weight: 600;
    color: #222;
    margin-top: 0.8rem;
  }

  /* Smooth fade-in animation */
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(6px); }
    to { opacity: 1; transform: translateY(0); }
  }

  /* Subtle pop animation for logo */
  @keyframes logoPop {
    0% { transform: scale(0.9); opacity: 0; }
    100% { transform: scale(1); opacity: 1; }
  }

  /* Responsive logo scaling */
  @media (max-width: 480px) {
    #loader-logo {
      width: 60px;
      height: 60px;
    }
    .progress-bar-wrapper {
      width: 200px;
    }
  }
</style>

<script>
  (function() {
    const progressBar = document.getElementById("progress-bar");
    const loadingText = document.getElementById("loading-text");
    const loaderWrapper = document.getElementById("loader-wrapper");

    let progress = 0;
    const duration = 1200; // 1.2 seconds
    const stepTime = 16; // ~60 FPS
    const steps = duration / stepTime;
    const increment = 95 / steps;

    const interval = setInterval(() => {
      progress += increment;
      if (progress >= 95) {
        progress = 95;
        clearInterval(interval);
      }
      const rounded = Math.floor(progress);
      progressBar.style.width = `${rounded}%`;
      loadingText.textContent = `Loading BookNest... ${rounded}%`;
    }, stepTime);

    window.addEventListener("load", () => {
      clearInterval(interval);
      progressBar.style.width = "100%";
      loadingText.textContent = "Loading Complete!";
      
      // Quick fade-out after 100% is shown
      setTimeout(() => {
        loaderWrapper.classList.add("fade-out");
        setTimeout(() => loaderWrapper.remove(), 400);
      }, 150);
    });
  })();
</script>