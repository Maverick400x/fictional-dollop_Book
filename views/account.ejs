<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Account Settings - BookNest</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="icon" href="https://book-nest-wgrp.onrender.com/src/logo.ico" type="image/svg+xml">

  <style>
    :root {
      --primary-color: #0d6efd;
      --success-color: #198754;
      --danger-color: #dc3545;
      --bg-light: #f7faff;
      --bg-body: #eef2f8;
      --text-dark: #2c3e50;
      --text-gray: #555;

      --glass-bg: rgba(255,255,255,0.15);
      --glass-border: rgba(255,255,255,0.25);
      --glass-shadow: rgba(0,0,0,0.15);
    }

    body {
      background: linear-gradient(135deg, var(--bg-light), var(--bg-body));
      font-family: 'Poppins', sans-serif;
      padding-top: 70px;
      min-height: 100vh;
    }

    h2 {
      font-weight: 700;
      color: var(--text-dark);
    }

    .greeting {
      font-style: italic;
      text-decoration: underline;
      font-size: 1.2rem;
      color: var(--primary-color);
      margin-bottom: 15px;
    }

    /* ===== Glassmorphic Cards ===== */
    .card, .dashboard-card {
      border-radius: 20px;
      background: var(--glass-bg);
      backdrop-filter: blur(12px);
      border: 1px solid var(--glass-border);
      box-shadow: 0 8px 24px var(--glass-shadow);
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    /* Slightly more rounded corners for Profile Overview & Addresses */
    .card-info, .billing-card {
      border-radius: 28px; /* increased from 20px */
      border-left: 4px solid var(--primary-color);
    }

    .card:hover, .dashboard-card:hover {
      transform: translateY(-5px);
      box-shadow: 0 12px 30px var(--glass-shadow);
    }

    .dashboard-cards {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(130px, 1fr));
      gap: 15px;
    }

    .dashboard-card {
      text-align: center;
      padding: 15px;
      color: inherit;
      text-decoration: none;
    }

    .dashboard-icon {
      font-size: 1.7rem;
      margin-bottom: 5px;
    }

    .dashboard-card:nth-child(1) .dashboard-icon { color: var(--primary-color); }
    .dashboard-card:nth-child(2) .dashboard-icon { color: var(--success-color); }
    .dashboard-card:nth-child(3) .dashboard-icon { color: var(--danger-color); }

    .dashboard-value {
      font-size: 1.5rem;
      font-weight: 700;
      color: var(--text-dark);
    }

    .dashboard-label {
      font-size: 0.85rem;
      color: var(--text-gray);
    }

    .left-panel {
      padding-right: 30px;
      border-right: 2px solid rgba(255,255,255,0.2);
    }

    @media (max-width: 992px) {
      .left-panel {
        border-right: none;
        border-bottom: 2px solid rgba(255,255,255,0.2);
        padding-bottom: 20px;
        margin-bottom: 30px;
      }
    }

    .recent-orders {
      border-radius: 20px;
      background: var(--glass-bg);
      backdrop-filter: blur(12px);
      border: 1px solid var(--glass-border);
      box-shadow: 0 8px 24px var(--glass-shadow);
      padding: 20px;
    }

    .recent-orders h5 {
      font-weight: 600;
      color: var(--text-dark);
      margin-bottom: 15px;
    }

    .recent-orders ul {
      list-style: none;
      padding: 0;
      margin: 0;
    }

    .recent-orders li {
      background: rgba(255,255,255,0.2);
      border-radius: 12px;
      padding: 10px 15px;
      margin-bottom: 10px;
      font-size: 0.95rem;
      color: var(--text-dark);
      display: flex;
      justify-content: space-between;
      align-items: center;
      backdrop-filter: blur(6px);
    }

    .recent-orders .order-status { font-weight: 600; margin-left: 5px; }
    .recent-orders .status-Delivered { color: var(--success-color); }
    .recent-orders .status-Pending { color: var(--primary-color); }
    .recent-orders .status-Cancelled { color: var(--danger-color); }

    .recent-orders small { color: var(--text-gray); font-size: 0.85rem; }

    .billing-card { border-left: 4px solid var(--primary-color); }

    .text-purple { color: #6f42c1; }
  </style>
</head>
<body>

  <%- include('./partials/header', { title: 'Account Settings' }) %>
  <!-- <%- include('partials/loading') %> -->
  

  <div class="container my-5 px-3 px-md-5">
    <div class="row g-5 align-items-start">

      <!-- LEFT PANEL -->
      <div class="col-12 col-lg-7 left-panel">
        <div class="greeting" id="greeting-text">Hello!</div>

        <h2 class="mb-4 text-center text-lg-start"><i class="bi bi-person-circle me-2"></i>Account Management</h2>

        <div class="card card-info mb-4 p-4">
          <h4 class="card-title mb-3"><i class="bi bi-person-badge"></i> Profile Overview</h4>
          <p class="mb-1"><strong>Full Name:</strong> <span class="fw-medium"><%= user.fullName || "Not provided" %></span></p>
          <p class="mb-1"><strong>Username:</strong> <span class="fw-medium text-purple"><%= user.username %></span></p>
          <p class="mb-1"><strong>Email:</strong> <span class="fw-medium"><%= user.email %></span></p>
          <% if (user.phone && user.phone !== 'Not provided') { %>
            <p class="mb-1"><strong>Phone:</strong> <span class="fw-medium">+91 <%= user.phone %></span></p>
          <% } %>
        </div>

        <div class="card billing-card p-4 mb-4">
          <h4 class="card-title mb-3"><i class="bi bi-geo-alt"></i> Addresses</h4>
          <p class="mb-1 fw-bold text-secondary">Billing Address : </p>
          <p class="mb-0 small"><%= user.billingAddress || "Same as shipping" %></p>
        </div>
      </div>

      <!-- RIGHT PANEL -->
      <div class="col-12 col-lg-5">
        <h2 class="mb-4 text-center text-lg-start"><i class="bi bi-activity me-2"></i>Activity Overview</h2>

        <div class="dashboard-cards mb-4">
          <a href="/orders" class="dashboard-card">
            <div class="dashboard-icon"><i class="bi bi-cart-check-fill"></i></div>
            <div class="dashboard-value"><%= metrics?.totalOrders || 0 %></div>
            <div class="dashboard-label">Total Orders</div>
          </a>

          <a href="/orders?status=delivered" class="dashboard-card">
            <div class="dashboard-icon"><i class="bi bi-check2-circle"></i></div>
            <div class="dashboard-value"><%= metrics?.deliveredOrders || 0 %></div>
            <div class="dashboard-label">Delivered</div>
          </a>

          <a href="/orders?status=cancelled" class="dashboard-card">
            <div class="dashboard-icon"><i class="bi bi-x-circle-fill"></i></div>
            <div class="dashboard-value"><%= metrics?.cancelledOrders || 0 %></div>
            <div class="dashboard-label">Cancelled</div>
          </a>
        </div>

        <div class="recent-orders">
          <h5 class="mb-3"><i class="bi bi-box-seam me-2"></i>Recent Orders</h5>
          <% if (recentOrders && recentOrders.length > 0) { %>
            <ul>
              <% recentOrders.forEach(order => { %>
                <li>
                  <div>
                    <i class="bi bi-journal-text me-1"></i>
                    <%= order.products[0] %>
                    <% if (order.products.length > 1) { %>
                        <span class="small text-muted">(+<%= order.products.length - 1 %> more)</span>
                    <% } %>
                    <br>
                    <small>Order ID: <span class="fw-semibold">#<%= String(order.id).substring(0, 8) %></span></small>
                  </div>
                  <div class="text-end">
                    <span class="order-status status-<%= order.status %>"><%= order.status %></span>
                    <small class="d-block"><%= order.date %></small>
                  </div>
                </li>
              <% }) %>
            </ul>
          <% } else { %>
            <p class="text-center text-muted m-0 p-3">
              <i class="bi bi-receipt me-1"></i> You haven't placed any orders yet.
            </p>
          <% } %>
        </div>
      </div>

    </div>
  </div>

  <%- include('./partials/footer') %>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const greetingEl = document.getElementById('greeting-text');
    const now = new Date();
    const hour = now.getHours();
    let greeting = 'Hello';
    if(hour >= 5 && hour < 12) greeting = 'Good Morning';
    else if(hour >= 12 && hour < 17) greeting = 'Good Afternoon';
    else if(hour >= 17 && hour < 21) greeting = 'Good Evening';
    const userName = `<%= user.fullName || "Reader" %>`;
    greetingEl.textContent = `${greeting}, ${userName}!`;
  </script>

</body>
</html>