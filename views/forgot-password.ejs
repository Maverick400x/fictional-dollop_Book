<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Forgot Password - BookNest</title>

  <!-- Bootstrap CSS & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/login.css">

  <style>
    .left-panel {
      background: url("https://thumbs.dreamstime.com/b/fantasy-library-anime-illustration-beautiful-view-style-generated-ai-image-286916330.jpg") no-repeat center center;
      background-size: cover;
      position: relative;
    }
    .left-panel::before {
      content: "";
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 0;
    }
    .left-panel > div {
      position: relative;
      z-index: 1;
    }
    .form-container {
      min-width: 350px;
    }

    /* Toast container */
    .toast-container {
      position: fixed;
      top: 20px;
      right: 20px;
      z-index: 1080;
    }

    /* Buttons styling */
    .btn-back {
      display: inline-flex;
      align-items: center;
      gap: 5px;
      transition: all 0.2s;
    }
    .btn-back:hover {
      transform: translateY(-1px);
      text-decoration: none;
    }
  </style>
</head>
<body>

<div class="d-flex min-vh-100">
  <!-- Left Info Panel -->
  <div class="left-panel d-none d-md-flex flex-column justify-content-center text-white p-5">
    <div>
      <h1 class="fw-bold">Forgot Your Password?</h1>
      <p class="lead mt-3">Enter your registered email and weâ€™ll send you a password reset link.</p>
      <p class="mt-4">Secure. Simple. Reliable.</p>
    </div>
  </div>

  <!-- Right Form Panel -->
  <div class="right-panel d-flex align-items-center justify-content-center flex-fill bg-light">
    <div class="form-container p-4 shadow-lg rounded">
      <h2 class="text-center mb-4">Reset Your Password</h2>

      <form action="/users/forgot-password" method="POST" novalidate>
        <!-- Email -->
        <div class="mb-3 input-group">
          <span class="input-group-text"><i class="bi bi-envelope-at"></i></span>
          <input type="email" name="email" class="form-control" placeholder="Enter your email" required value="<%= email ? email : '' %>" />
        </div>

        <!-- Submit Button -->
        <button type="submit" class="btn btn-primary w-100 mb-3">Send Reset Link</button>
      </form>

      <!-- Back buttons -->
      <div class="d-flex justify-content-center gap-3 mt-2">
        <a href="/users/login" class="btn btn-outline-primary btn-back">
          <i class="bi bi-box-arrow-in-left"></i> Back to Login
        </a>
        <a href="/" class="btn btn-outline-secondary btn-back">
          <i class="bi bi-house-door"></i> Back to Home
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Toast Container -->
<div class="toast-container position-fixed top-0 end-0 p-3">
  <% if (typeof success !== "undefined" && success) { %>
    <div class="toast align-items-center text-bg-success border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <i class="bi bi-check-circle me-2"></i> <%= success %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
      </div>
    </div>
  <% } %>

  <% if (typeof error !== "undefined" && error) { %>
    <div class="toast align-items-center text-bg-danger border-0 show" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <i class="bi bi-exclamation-triangle me-2"></i> <%= error %>
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
      </div>
    </div>
  <% } %>
</div>

<!-- Bootstrap Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<!-- Auto-hide Toasts -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const toastElList = [].slice.call(document.querySelectorAll('.toast'))
    toastElList.map(toastEl => new bootstrap.Toast(toastEl, { delay: 4000 }).show())
  });
</script>

</body>
</html>