<!DOCTYPE html>
<html lang="en">
<head>
  <title>Books - BookNest</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">
  <link rel="icon" href="/src/logo.ico" type="image/x-icon">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">

  <style>
    :root {
      --booknest-primary: #1e81b0;
      --glass-bg: rgba(255,255,255,0.15);
      --glass-border: rgba(255,255,255,0.25);
      --search-border: #1e81b0;
    }

    body {
      padding-top: 75px;
      padding-bottom: 80px;
      font-family: 'Inter', sans-serif;
      background: linear-gradient(180deg, #e0f7fa, #ffffff);
    }

    h2 {
      font-weight: 700;
      color: var(--booknest-primary);
    }

    /* ---- Search Bar ---- */
    .search-container {
      max-width: 600px;
      margin: 0 auto 40px;
    }
    .input-group .form-control {
      font-size: 0.9rem;
      padding: 0.5rem 0.75rem;
      height: 45px;
      border-radius: 12px 0 0 12px;
      border: 2px solid var(--search-border);
      background: rgba(255,255,255,0.15);
      color: black;
      backdrop-filter: blur(6px);
      transition: all 0.3s ease;
    }
    .input-group .form-control:focus {
      outline: none;
      border-color: var(--booknest-primary);
      box-shadow: 0 0 10px rgba(30,129,176,0.4);
    }
    .input-group .btn {
      border-radius: 0 12px 12px 0;
      backdrop-filter: blur(6px);
      background: rgba(255,255,255,0.15);
      border: 2px solid var(--search-border);
      color: black;
      transition: all 0.3s ease;
    }
    .input-group .btn:hover {
      background: rgba(30,129,176,0.3);
      color: #fff;
    }

    /* ---- Filter Sidebar ---- */
    .filter-card {
      background: rgba(255,255,255,0.2);
      backdrop-filter: blur(10px);
      border: 1px solid rgba(255,255,255,0.25);
      border-radius: 15px;
      padding: 20px;
      box-shadow: 0 4px 20px rgba(0,0,0,0.05);
      position: sticky;
      top: 100px;
    }

    .filter-card h5 {
      color: var(--booknest-primary);
      font-weight: 600;
      margin-bottom: 15px;
    }

    /* ---- Filter Selects (Glassmorphism Style) ---- */
    .form-select {
      background: rgba(255,255,255,0.15);
      border: 2px solid var(--booknest-primary);
      border-radius: 12px;
      color: black;
      font-size: 0.9rem;
      padding: 0.5rem 1rem;
      transition: all 0.3s ease;
      backdrop-filter: blur(6px);
    }
    .form-select:focus {
      box-shadow: 0 0 10px rgba(30,129,176,0.4);
      border-color: var(--booknest-primary);
    }
    .form-select option {
      background: rgba(255,255,255,0.8);
      color: black;
    }

    /* ---- Price Range ---- */
    .price-range {
      margin-top: 20px;
    }
    .price-range input[type="range"] {
      width: 100%;
      accent-color: var(--booknest-primary);
    }
    .price-labels {
      display: flex;
      justify-content: space-between;
      font-size: 0.85rem;
      color: #333;
      font-weight: 600;
    }

    /* ---- Checkbox Filters ---- */
    .form-check-label {
      color: black;
      font-weight: 500;
      cursor: pointer;
    }

    /* ---- Product Cards ---- */
    .card {
      border-radius: 20px;
      background: var(--glass-bg);
      backdrop-filter: blur(12px);
      border: 1px solid var(--glass-border);
      transition: transform 0.35s ease, box-shadow 0.35s ease;
      overflow: hidden;
    }
    .card:hover {
      transform: perspective(1000px) rotateX(3deg) rotateY(3deg) translateY(-10px);
      box-shadow: 0 20px 40px rgba(0,0,0,0.25);
    }

    .card-img-top-container {
      background-color: rgba(255,255,255,0.1);
      height: 230px;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 15px;
      transition: transform 0.3s ease;
    }
    .card:hover .card-img-top-container { transform: scale(1.05); }

    .card-img-top {
      max-height: 200px;
      object-fit: contain;
      transition: transform 0.3s ease;
    }
    .card:hover .card-img-top { transform: scale(1.08); }

    .card-body {
      padding: 1rem;
      text-align: center;
      color: #fff;
    }

    .badge {
      backdrop-filter: blur(6px);
      background: rgba(255,255,255,0.2);
      border: 1px solid rgba(255,255,255,0.3);
      color: #fff;
      font-size: 0.75rem;
      font-weight: 600;
      border-radius: 12px;
      padding: 0.3rem 0.6rem;
    }

    .pagination {
      justify-content: center;
      margin-top: 30px;
    }
    .pagination .page-link {
      color: black;
      border-radius: 10px;
      margin: 0 3px;
      background: rgba(255,255,255,0.8);
    }
    .pagination .page-item.active .page-link {
      background: var(--booknest-primary);
      color: #fff;
    }
  </style>

  <script>
    function applyFilters() {
      const sortValue = document.getElementById("sortOptions").value;
      const tagValue = document.getElementById("tagOptions").value;
      const priceValue = document.getElementById("priceRange").value;
      const limited = document.getElementById("limitedCheck").checked ? 1 : 0;
      const hotSale = document.getElementById("hotSaleCheck").checked ? 1 : 0;
      const search = document.getElementById("search-input").value || '';
      const currentPage = <%= currentPage || 1 %>;

      let url = `/products?page=${currentPage}&sort=${sortValue}&tag=${tagValue}&price=${priceValue}&search=${encodeURIComponent(search)}`;
      if(limited) url += `&limited=1`;
      if(hotSale) url += `&hotSale=1`;

      window.location.href = url;
    }

    function updatePriceLabel(value) {
      document.getElementById("priceValue").textContent = "₹" + value;
    }
  </script>
</head>
<body>

<%- include('partials/header') %>

<div class="container mt-4">
  <h2 class="text-center mb-4">📚 Discover Our Collection</h2>

  <!-- 🔍 Search Bar -->
  <div class="search-container">
    <form action="/products" method="GET" class="d-flex input-group">
      <input type="text" name="search" id="search-input" class="form-control"
        placeholder="Search by title, author..." value="<%= search || '' %>">
      <button type="submit" class="btn"><i class="bi bi-search"></i></button>
    </form>
  </div>

  <!-- 🔽 Layout: Sidebar Filters + Book Grid -->
  <div class="row">
    <!-- Left Sidebar Filters -->
    <div class="col-lg-3 mb-4">
      <div class="filter-card">
        <h5><i class="bi bi-funnel"></i> Filters</h5>

        <label for="sortOptions" class="form-label small fw-bold">Sort By</label>
        <select id="sortOptions" class="form-select mb-3" onchange="applyFilters()">
          <option value="">Relevance</option>
          <option value="priceLow" <%= sort === 'priceLow' ? 'selected' : '' %>>Price: Low → High</option>
          <option value="priceHigh" <%= sort === 'priceHigh' ? 'selected' : '' %>>Price: High → Low</option>
          <option value="titleAZ" <%= sort === 'titleAZ' ? 'selected' : '' %>>Title: A → Z</option>
          <option value="titleZA" <%= sort === 'titleZA' ? 'selected' : '' %>>Title: Z → A</option>
          <option value="authorAZ" <%= sort === 'authorAZ' ? 'selected' : '' %>>Author: A → Z</option>
          <option value="authorZA" <%= sort === 'authorZA' ? 'selected' : '' %>>Author: Z → A</option>
        </select>

        <label for="tagOptions" class="form-label small fw-bold">Tag</label>
        <select id="tagOptions" class="form-select mb-3" onchange="applyFilters()">
          <option value="">All Tags</option>
          <% allTags.forEach(t => { %>
            <option value="<%= t %>" <%= tag === t ? 'selected' : '' %>><%= t %></option>
          <% }) %>
        </select>

        <!-- 🏷️ Price Range Slider -->
        <div class="price-range">
          <label for="priceRange" class="form-label small fw-bold">Max Price</label>
          <input type="range"
                 min="<%= minPrice || 0 %>"
                 max="<%= maxPrice || 1000 %>"
                 step="50"
                 id="priceRange"
                 value="<%= selectedPrice || maxPrice %>"
                 oninput="updatePriceLabel(this.value)"
                 onchange="applyFilters()">
          <div class="price-labels">
            <span>₹<%= minPrice || 0 %></span>
            <span id="priceValue">₹<%= selectedPrice || maxPrice %></span>
          </div>
        </div>

        <!-- ✅ Limited & Hot Sale Checkboxes -->
        <div class="mt-3">
          <div class="form-check mb-2">
            <input class="form-check-input" type="checkbox" id="limitedCheck" onchange="applyFilters()"
              <%= typeof limited !== 'undefined' && limited ? 'checked' : '' %>>
            <label class="form-check-label" for="limitedCheck">Limited Edition</label>
          </div>
          <div class="form-check">
            <input class="form-check-input" type="checkbox" id="hotSaleCheck" onchange="applyFilters()"
              <%= typeof hotSale !== 'undefined' && hotSale ? 'checked' : '' %>>
            <label class="form-check-label" for="hotSaleCheck">Hot Sale</label>
          </div>
        </div>
      </div>
    </div>

    <!-- Right Book Grid -->
    <div class="col-lg-9">
      <div class="row g-4">
        <% if (products && products.length > 0) { %>
          <% products.forEach(product => { %>
            <div class="col-12 col-sm-6 col-md-4">
              <div class="card h-100">
                <div class="card-img-top-container">
                  <img src="<%= product.image || '/src/books/default-book.png' %>" alt="<%= product.title %>" class="card-img-top">
                </div>
                <div class="card-body">
                  <h5 class="card-title text-truncate" title="<%= product.title %>"><%= product.title %></h5>
                  <p class="card-text author small mb-1 text-dark">By: <%= product.author %></p>

                  <div class="my-2">
                    <% if (product.limitedEdition) { %>
                      <span class="badge bg-danger me-2">Limited</span>
                    <% } %>
                    <% if (product.hotSale) { %>
                      <span class="badge bg-warning text-dark">🔥 Sale</span>
                    <% } %>
                  </div>

                  <p class="fw-bold fs-5 text-primary mb-3">₹<%= product.price.toFixed(2) %></p>
                  <a href="/products/<%= product.id %>" class="btn btn-outline-primary w-100"><i class="bi bi-eye"></i> View Details</a>
                </div>
              </div>
            </div>
          <% }) %>
        <% } else { %>
          <div class="col-12">
            <div class="alert alert-warning text-center p-4">
              <i class="bi bi-exclamation-triangle-fill me-2"></i>
              No books found matching your criteria.
            </div>
          </div>
        <% } %>
      </div>

      <% if (totalPages > 1) { %>
        <nav class="mt-4">
          <ul class="pagination flex-wrap">
            <% const encodedSearch = encodeURIComponent(search || ''); %>
            <% const paginationBaseUrl = `/products?sort=${sort || ''}&tag=${tag || ''}&price=${selectedPrice || maxPrice || ''}&search=${encodedSearch}${limited ? '&limited=1' : ''}${hotSale ? '&hotSale=1' : ''}`; %>

            <% if (currentPage > 1) { %>
              <li class="page-item">
                <a class="page-link" href="<%= paginationBaseUrl %>&page=<%= currentPage - 1 %>">&laquo;</a>
              </li>
            <% } %>

            <% for (let i = 1; i <= totalPages; i++) { %>
              <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                <a class="page-link" href="<%= paginationBaseUrl %>&page=<%= i %>"><%= i %></a>
              </li>
            <% } %>

            <% if (currentPage < totalPages) { %>
              <li class="page-item">
                <a class="page-link" href="<%= paginationBaseUrl %>&page=<%= currentPage + 1 %>">&raquo;</a>
              </li>
            <% } %>
          </ul>
        </nav>
      <% } %>
    </div>
  </div>
</div>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>