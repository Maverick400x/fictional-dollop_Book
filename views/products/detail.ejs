<!DOCTYPE html>
<html lang="en">
<head>
  <title><%= product.title %> | BookNest</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- Bootstrap & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link rel="icon" href="https://book-nest-wgrp.onrender.com/src/logo.ico" type="image/svg+xml">

  <style>
    body {
      padding-top: 70px;
      background: linear-gradient(180deg, #e0f7fa, #ffffff);
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    /* --- Glass Card --- */
    .glass-card {
      background: rgba(255, 255, 255, 0.15);
      backdrop-filter: blur(12px);
      border: 1px solid rgba(255,255,255,0.25);
      border-radius: 15px;
      box-shadow: 0 8px 30px rgba(0,0,0,0.12);
      transition: all 0.3s ease;
    }

    .glass-card:hover {
      transform: translateY(-4px);
      box-shadow: 0 12px 40px rgba(0,0,0,0.2);
    }

    /* Product Image */
    .product-img {
      max-height: 420px;
      object-fit: contain;
      border-radius: 15px;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .product-img:hover {
      transform: scale(1.05);
      box-shadow: 0 12px 30px rgba(0,0,0,0.2);
    }

    /* Badges */
    .badge-custom {
      margin-right: 6px;
      font-size: 0.85rem;
      transition: transform 0.2s ease;
    }

    .badge-custom:hover {
      transform: scale(1.1);
    }

    /* Price */
    .price-tag {
      font-size: 1.6rem;
      color: #1c7430;
      font-weight: 700;
    }

    /* Buttons */
    .btn-glass {
      background: rgba(255,255,255,0.2);
      color: #fff;
      border: 1px solid rgba(255,255,255,0.3);
      border-radius: 12px;
      padding: 0.6rem 1.5rem;
      font-weight: 600;
      transition: all 0.3s ease;
    }

    .btn-glass:hover {
      background: rgba(255,255,255,0.35);
      transform: translateY(-2px) scale(1.05);
      box-shadow: 0 8px 25px rgba(0,0,0,0.3);
      color: #fff;
    }

    /* Add to Cart Button */
    .btn-add-cart {
      background: linear-gradient(135deg, #ff6a00, #ff8e53);
      color: #fff;
      border: none;
    }

    .btn-add-cart:hover {
      background: linear-gradient(135deg, #ff8e53, #ff6a00);
      transform: translateY(-2px) scale(1.05);
      box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    /* View Details Button (Related Books) */
    .btn-view-details {
      background: linear-gradient(135deg, #ff4081, #f50057); /* Pink Gradient */
      color: #fff;
      border: none;
    }

    .btn-view-details:hover {
      background: linear-gradient(135deg, #f50057, #ff4081);
      transform: translateY(-2px) scale(1.05);
      color: white;
      box-shadow: 0 10px 30px rgba(0,0,0,0.3);
    }

    .truncate {
      white-space: nowrap;
      overflow: hidden;
      text-overflow: ellipsis;
    }

    .card-shadow {
      box-shadow: 0 4px 15px rgba(0,0,0,0.1);
      border: none;
      transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

    .card-shadow:hover {
      transform: translateY(-3px);
      box-shadow: 0 10px 30px rgba(0,0,0,0.15);
    }

    @media (max-width: 768px) {
      .product-img {
        width: 100%;
      }
    }
  </style>
</head>

<body>
  <!-- Navbar -->
  <%- include('../partials/header') %>

  <!-- Product Details -->
  <div class="container py-5">
    <div class="row g-5 align-items-center glass-card p-4">
      <div class="col-lg-5 text-center">
        <img src="<%= product.image || '/src/book-placeholder.png' %>" alt="<%= product.title %>" class="img-fluid product-img shadow-sm">
      </div>

      <div class="col-lg-7">
        <h2 class="fw-bold mb-2"><%= product.title %></h2>
        <p class="text-muted mb-3">by <strong><%= product.author %></strong></p>

        <div class="mb-3">
          <% if (product.tag) { %>
            <span class="badge bg-secondary badge-custom"><i class="bi bi-tag-fill me-1"></i><%= product.tag.toUpperCase() %></span>
          <% } %>
          <% if (product.limitedEdition) { %>
            <span class="badge bg-danger badge-custom"><i class="bi bi-stars me-1"></i>Limited Edition</span>
          <% } %>
          <% if (product.hotSale) { %>
            <span class="badge bg-warning text-dark badge-custom"><i class="bi bi-fire me-1"></i>Hot Sale</span>
          <% } %>
        </div>

        <h4 class="price-tag mb-3">₹ <%= product.price %></h4>
        <p class="text-secondary"><%= product.description || "No description available for this book." %></p>

        <div class="mt-4 d-flex flex-wrap gap-3">
          <% if (user) { %>
            <a href="/cart/add/<%= product.id %>?added=true" class="btn btn-add-cart btn-glass shadow-sm">
              <i class="bi bi-cart-plus me-2"></i>Add to Cart
            </a>
          <% } else { %>
            <a href="/users/login" class="btn btn-outline-primary btn-glass shadow-sm">
              <i class="bi bi-box-arrow-in-right me-2"></i>Login to Buy
            </a>
          <% } %>
          <a href="/products" class="btn btn-outline-secondary btn-glass shadow-sm">
            <i class="bi bi-arrow-left me-2"></i>Back to Products
          </a>
        </div>
      </div>
    </div>
  </div>

  <!-- Related Books Section -->
  <% if (relatedBooks && relatedBooks.length > 0) { %>
  <div class="container mt-5">
    <h3 class="mb-4 fw-semibold"><i class="bi bi-book-half me-2"></i>Related Books</h3>
    <div class="row g-4">
      <% relatedBooks.forEach(book => { %>
        <div class="col-sm-6 col-md-4 col-lg-3">
          <div class="card glass-card h-100">
            <img src="<%= book.image || '/src/book-placeholder.png' %>" class="card-img-top" alt="<%= book.title %>" style="height: 250px; object-fit: contain;">
            <div class="card-body d-flex flex-column">
              <h6 class="card-title mb-1 truncate" title="<%= book.title %>"><%= book.title %></h6>
              <p class="text-muted mb-2" style="font-size: 0.9rem;">by <%= book.author %></p>
              <p class="fw-bold text-success mb-3">₹ <%= book.price %></p>
              <a href="/products/<%= book.id %>" class="btn btn-view-details btn-sm mt-auto">
                <i class="bi bi-eye me-1"></i>View Details
              </a>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>
  <% } %>

  <!-- Toast Notification -->
  <div class="toast-container position-fixed bottom-0 end-0 p-3">
    <div id="cartToast" class="toast align-items-center text-bg-success border-0 shadow" role="alert" aria-live="assertive" aria-atomic="true">
      <div class="d-flex">
        <div class="toast-body">
          <i class="bi bi-check-circle-fill me-2"></i>Book added to cart!
        </div>
        <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
      </div>
    </div>
  </div>
  <%- include('../partials/footer') %>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    const urlParams = new URLSearchParams(window.location.search);
    if (urlParams.get('added') === 'true') {
      const toast = new bootstrap.Toast(document.getElementById('cartToast'));
      toast.show();
    }
  </script>
</body>
</html>