<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Register - BookNest</title>

  <!-- Bootstrap CSS & Icons -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
  <link rel="icon" href="https://book-nest-wgrp.onrender.com/src/logo.ico" type="image/svg+xml">
  <link rel="stylesheet" href="/css/register.css">

  <style>
    .left-panel {
      background: url("https://thumbs.dreamstime.com/b/fantasy-library-anime-illustration-beautiful-view-style-generated-ai-image-286916330.jpg") no-repeat center center;
      background-size: cover;
      position: relative;
    }
    .left-panel::before {
      content: "";
      position: absolute;
      inset: 0;
      background: rgba(0, 0, 0, 0.5);
      z-index: 0;
    }
    .left-panel > div {
      position: relative;
      z-index: 1;
    }
    .form-container {
      min-width: 350px;
    }
    .input-group-text i {
      cursor: pointer;
    }
    .login-link {
      transition: color 0.2s, transform 0.2s;
    }
    .login-link:hover {
      color: #0d6efd;
      text-decoration: underline;
      transform: translateY(-1px);
    }
    .strength-bar {
      height: 5px;
      border-radius: 5px;
      transition: width 0.3s ease;
    }
  </style>
</head>
<body>

<!-- Toast container (top-right) -->
<div class="position-fixed top-0 end-0 p-3" style="z-index: 1100">
  <div id="toast-error" class="toast align-items-center text-white bg-danger border-0" role="alert">
    <div class="d-flex">
      <div class="toast-body" id="toast-message">Validation error</div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
    </div>
  </div>

  <div id="toast-success" class="toast align-items-center text-white bg-success border-0" role="alert">
    <div class="d-flex">
      <div class="toast-body">User created successfully! Redirecting...</div>
      <button type="button" class="btn-close btn-close-white me-2 m-auto" data-bs-dismiss="toast"></button>
    </div>
  </div>
</div>

<div class="d-flex min-vh-100">
  <!-- Left Info Panel -->
  <div class="left-panel d-none d-md-flex flex-column justify-content-center text-white p-5">
    <div>
      <h1 class="fw-bold">Welcome to BookNest ðŸ“š</h1>
      <p class="lead mt-3">Discover, Read, and Grow.<br />Your personal BookNest for every genre.</p>
      <p class="mt-4">Browse thousands of books, track your reading, and explore new releases all in one place.</p>
    </div>
  </div>

  <!-- Right Register Form -->
  <div class="right-panel d-flex align-items-center justify-content-center flex-fill bg-light">
    <div class="form-container p-4 shadow-lg rounded bg-white">

      <% if (typeof error !== "undefined" && error) { %>
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
          <%= error %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
      <% } %>

      <% if (typeof success !== "undefined" && success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
          <%= success %>
          <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
        <script>
          // Automatically show toast and redirect after registration
          window.addEventListener('DOMContentLoaded', () => {
            const successToast = new bootstrap.Toast(document.getElementById('toast-success'));
            successToast.show();
            setTimeout(() => window.location.href = "/users/login", 2000);
          });
        </script>
      <% } %>

      <h2 class="text-center mb-4">Create Account</h2>

      <form id="registerForm" action="/users/register" method="POST" novalidate>
        <!-- Full Name -->
        <div class="mb-3 input-group">
          <span class="input-group-text"><i class="bi bi-person-fill"></i></span>
          <input type="text" name="fullName" id="fullName" class="form-control" placeholder="Full Name" required />
        </div>

        <!-- Username -->
        <div class="mb-3 input-group">
          <span class="input-group-text"><i class="bi bi-person"></i></span>
          <input type="text" name="username" id="username" class="form-control" placeholder="Username" required />
        </div>

        <!-- Email -->
        <div class="mb-3 input-group">
          <span class="input-group-text"><i class="bi bi-envelope"></i></span>
          <input type="email" name="email" id="email" class="form-control" placeholder="Email address" required />
        </div>

        <!-- Password -->
        <div class="mb-2 input-group">
          <span class="input-group-text"><i class="bi bi-lock-fill"></i></span>
          <input type="password" name="password" id="password" class="form-control" placeholder="Password" required />
          <span class="input-group-text">
            <i class="bi bi-eye-fill" id="togglePassword"></i>
          </span>
        </div>
        <div class="mb-3">
          <div id="strengthText" class="small text-muted mb-1">Password strength: <span id="strengthLabel">None</span></div>
          <div class="strength-bar bg-secondary w-0" id="strengthBar"></div>
        </div>

        <!-- Confirm Password -->
        <div class="mb-2 input-group">
          <span class="input-group-text"><i class="bi bi-lock"></i></span>
          <input type="password" name="confirmPassword" id="confirmPassword" class="form-control" placeholder="Confirm Password" required />
          <span class="input-group-text">
            <i class="bi bi-eye-fill" id="toggleConfirmPassword"></i>
          </span>
        </div>
        <div id="matchStatus" class="small text-muted mb-3">
          <i class="bi bi-dot"></i> Passwords not checked
        </div>

        <button type="submit" class="btn btn-success w-100">Register</button>
      </form>

      <!-- Improved login link style -->
      <p class="text-center mt-3 mb-2">
        <span class="text-muted">Already have an account?</span>
        <a href="/users/login" class="text-decoration-none fw-semibold text-primary ms-1 login-link">
          Login here <i class="bi bi-box-arrow-in-right ms-1"></i>
        </a>
      </p>

      <div class="text-center">
        <a href="/" class="btn btn-sm btn-outline-secondary mt-2">
          <i class="bi bi-arrow-left"></i> Back to Home
        </a>
      </div>
    </div>
  </div>
</div>

<!-- Bootstrap Bundle -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<script>
  // Toast setup
  const showToast = (message) => {
    const toastMessage = document.getElementById("toast-message");
    const toastElement = document.getElementById("toast-error");
    toastMessage.textContent = message;
    const toast = new bootstrap.Toast(toastElement);
    toast.show();
  };

  // Password Strength Checker
  const passwordField = document.getElementById("password");
  const strengthBar = document.getElementById("strengthBar");
  const strengthLabel = document.getElementById("strengthLabel");

  passwordField.addEventListener("input", () => {
    const value = passwordField.value;
    let strength = 0;

    if (value.length >= 6) strength++;
    if (/[A-Z]/.test(value)) strength++;
    if (/[0-9]/.test(value)) strength++;
    if (/[^A-Za-z0-9]/.test(value)) strength++;

    switch (strength) {
      case 0:
        strengthBar.style.width = "0%";
        strengthBar.className = "strength-bar bg-secondary w-0";
        strengthLabel.textContent = "None";
        break;
      case 1:
        strengthBar.style.width = "25%";
        strengthBar.className = "strength-bar bg-danger";
        strengthLabel.textContent = "Weak";
        break;
      case 2:
        strengthBar.style.width = "50%";
        strengthBar.className = "strength-bar bg-warning";
        strengthLabel.textContent = "Medium";
        break;
      case 3:
        strengthBar.style.width = "75%";
        strengthBar.className = "strength-bar bg-info";
        strengthLabel.textContent = "Good";
        break;
      case 4:
        strengthBar.style.width = "100%";
        strengthBar.className = "strength-bar bg-success";
        strengthLabel.textContent = "Strong";
        break;
    }
  });

  // Password Match Live Check
  const confirmPasswordField = document.getElementById("confirmPassword");
  const matchStatus = document.getElementById("matchStatus");

  const checkMatch = () => {
    if (!passwordField.value && !confirmPasswordField.value) {
      matchStatus.innerHTML = `<i class="bi bi-dot"></i> Passwords not checked`;
      matchStatus.className = "small text-muted";
    } else if (passwordField.value === confirmPasswordField.value) {
      matchStatus.innerHTML = `<i class="bi bi-check-circle-fill text-success"></i> Passwords match`;
    } else {
      matchStatus.innerHTML = `<i class="bi bi-x-circle-fill text-danger"></i> Passwords do not match`;
    }
  };

  passwordField.addEventListener("input", checkMatch);
  confirmPasswordField.addEventListener("input", checkMatch);

  // Form validation
  document.getElementById("registerForm").addEventListener("submit", function (e) {
    const fullName = document.getElementById("fullName").value.trim();
    const username = document.getElementById("username").value.trim();
    const email = document.getElementById("email").value.trim();
    const password = passwordField.value.trim();
    const confirmPassword = confirmPasswordField.value.trim();

    const usernameRegex = /^[a-zA-Z][a-zA-Z0-9_]{2,19}$/;
    const isGmail = email.endsWith("@gmail.com");

    if (fullName.length < 3) {
      e.preventDefault();
      showToast("Full name must be at least 3 characters.");
    } else if (!usernameRegex.test(username)) {
      e.preventDefault();
      showToast("Username must start with a letter and be 3â€“20 characters.");
    } else if (!isGmail) {
      e.preventDefault();
      showToast("Only Gmail addresses are allowed.");
    } else if (password.length < 6) {
      e.preventDefault();
      showToast("Password must be at least 6 characters long.");
    } else if (password !== confirmPassword) {
      e.preventDefault();
      showToast("Passwords do not match.");
    }
  });

  // Toggle password visibility
  const togglePassword = document.getElementById("togglePassword");
  const toggleConfirmPassword = document.getElementById("toggleConfirmPassword");

  togglePassword.addEventListener("click", () => {
    const type = passwordField.type === "password" ? "text" : "password";
    passwordField.type = type;
    togglePassword.classList.toggle("bi-eye-slash-fill");
  });

  toggleConfirmPassword.addEventListener("click", () => {
    const type = confirmPasswordField.type === "password" ? "text" : "password";
    confirmPasswordField.type = type;
    toggleConfirmPassword.classList.toggle("bi-eye-slash-fill");
  });
</script>
</body>
</html>